@model EntityFrameworkCodeFirstMVC.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutNavBar.cshtml";
}

<h2>Edit</h2>

<form class="form-group" action="/Admin/Edit" method="post">
    <div>
        
        @Html.HiddenFor(x => x.Id)
        
        @Html.LabelFor(x => x.Code, new { @class = "form-control" })
        @Html.TextBoxFor(x => x.Code, new { @class = "form-control" })
        <br>
        @Html.LabelFor(x => x.Name, new { @class = "form-control" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br>
        @Html.LabelFor(x => x.Definition, new { @class = "form-control" })
        @Html.TextBoxFor(x => x.Definition, new { @class = "form-control" })
    </div>
    <input type="submit" name="name" value="Save" class="btn btn-primary" />
</form>

