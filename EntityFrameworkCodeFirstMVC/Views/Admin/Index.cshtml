@using EntityFrameworkCodeFirstMVC.Models
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNavBar.cshtml";
}

<h2>Admin</h2>

@if (Model != null)
{
    <div>
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Definition</th>
                <th>#</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id </td>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.Definition</td>
                    <td>
                        <a href="~/Admin/Edit/@item.Id" class="btn btn-success" style="padding-left:2px;">Edit</a>
                        <a href="~/Admin/Delete/@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}

